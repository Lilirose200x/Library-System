<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/user_item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="            Item"
            android:height="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <TableLayout
            android:id="@+id/user_itemTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--    input of id of the item you want to reserve-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_reserveItem_Id"
            android:inputType="number"
            android:hint="Id of item you want to reserve"/>
        <!-- Button which creates a new item-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Reserve"
            android:onClick="reserveItem"
            android:layout_marginBottom="30dp"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>



</ScrollView>
