<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        >

        <!--        error-->
        <TextView
            android:id="@+id/textView22"
            android:layout_width="411dp"
            android:layout_height="93dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="77dp"
            android:text="        Welcome!"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColorLink="#4C3E3E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:visibility="gone" />
        <!--Button go to user sign up page-->
        <!--Button go to user login page-->
        <Button
            android:id="@+id/user_signUp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="end"
            android:text="User Sign Up"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/user_login"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="end"
            android:text="User Login"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!--Button go to librarian login page-->
        <Button
            android:id="@+id/librarian_login"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="end"
            android:text="Librarian Login"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>