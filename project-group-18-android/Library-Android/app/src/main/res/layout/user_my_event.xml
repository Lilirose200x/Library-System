<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/user_myEvent_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myEventPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="        My Event"
            android:height="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <TableLayout
            android:id="@+id/userMyEventTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/myEventIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="please fill in the event id:"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Unregister"
            android:onClick="unRegisterEvent"
            tools:ignore="UsingOnClickInXml"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>
</ScrollView>
