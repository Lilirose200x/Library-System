<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <!--        Buttons which goes to  view item page-->
        <Button
            android:id="@+id/goToUserItemButton"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="View Item"
            tools:ignore="MissingConstraints" />
        <!--        Buttons which goes to view my item page-->
        <Button
            android:id="@+id/goToUserMyItemButton"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="View My Item"
            tools:ignore="MissingConstraints" />
        <!--        Buttons which goes to view event page-->
        <Button
            android:id="@+id/goToUserEventButton"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="View Event"
            tools:ignore="MissingConstraints" />
        <!--        Buttons which goes to view event page-->
        <Button
            android:id="@+id/goToUserMyEventButton"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="View My Event"
            tools:ignore="MissingConstraints" />

        <!--        Buttons which goes to update account page-->
        <Button
            android:id="@+id/goToUserUpdateAccountButton"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Update Account"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    <!--Librarian Homepage Title-->
    <TextView
        android:id="@+id/textView22"
        android:layout_width="411dp"
        android:layout_height="93dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="77dp"
        android:text="    User Homepage"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColorLink="#4C3E3E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>